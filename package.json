{
  "name": "bokus-test-task-express",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start":"npm run prod",
    "server": "node ./build/bin/www",
    "build": "rm -rf ./build && npm run transpile",
    "dev": "NODE_ENV=development && npm run build && npm run server" ,
    "prod": "NODE_ENV=production && npm run build && npm run server" ,
    "transpile": "babel ./src --out-dir build",
    "watch:dev":"nodemon"
  },
  "babel":{
    "presets":["@babel/preset-env"]
  },
  "nodemonConfig": { 
    "exec": "npm run dev",
    "watch": ["./src/*", "./public/*", "./views/*"],
    "ignore": ["**/__tests__/**", "*.test.js", "*.spec.js"]
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "pug": "2.0.0-beta11"
  }
}
